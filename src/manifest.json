{
	"manifest_version": 2,
	"name": "Aumentacion",
	"version": "1.0",
	
	"content_scripts": [
		{
		"matches": [
			"https://www.bing.com/search?q=*", 
			"https://www.google.com/search?*", 
			"https://duckduckgo.com/html/?q=*"
		],
		"js": [
			"node_modules/webextension-polyfill/dist/browser-polyfill.js",
			"node_modules/compromise/builds/compromise.es6.js",
			"node_modules/jquery/dist/jquery.min.js",
			"node_modules/jqcloud2/dist/jqcloud.min.js",
			"content_scripts/main.js"
		],
		"css": [
			"resources/bootstrap.css",
			"resources/bootstrap-grid.css",
			"resources/main.css",
			"node_modules/jqcloud2/dist/jqcloud.min.css"
		]
		}
	],

	"browser_action": {
		"default_icon": {
			"64": "resources/logo.png"
		},
		"default_title": "Aumentacion"
	},

	"background": {
		"scripts": [
			"node_modules/webextension-polyfill/dist/browser-polyfill.js",
			"background_scripts/main.js"
		]
	},

	"permissions": [
		"*",
        "notifications",
        "activeTab",
	    "tabs",
	    "storage"
	  ]
}
